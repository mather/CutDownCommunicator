source 'http://rubygems.org'

gem 'rails', '3.0.6'

# MongoDB ORM
gem 'mongoid','2.0.1'
gem 'bson_ext'

# HTML Haiku
gem 'haml-rails'

# Authentication Library
gem 'devise'

# jQuery for Rails
gem 'jquery-rails'

# Generators
gem 'rails3-generators'

# Use unicorn as the web server
gem 'unicorn'

# gems for testing
group :development, :test do
  # Unit Test
  gem 'rspec-rails'
  gem 'mongoid-rspec'
  gem 'factory_girl_rails'

  # Acceptance Test
  gem 'steak'
  gem 'capybara'
  gem 'spork'

  # Database Cleaner
  gem 'database_cleaner'
end
